<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/posts_list_item_image"
        android:layout_width="@dimen/posts_lists_image_size"
        android:layout_height="@dimen/posts_lists_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/posts_lists_margins"
        tools:src="@drawable/test_image"/>

    <TextView
        android:id="@+id/posts_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/posts_list_item_image"
        android:layout_toEndOf="@+id/posts_list_item_image"
        android:layout_toRightOf="@+id/posts_list_item_image"
        tools:text="Test holder item"/>

</RelativeLayout>