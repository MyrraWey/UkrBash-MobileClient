<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/posts_list_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/post_list_item_unviewed">

    <ImageView
        android:id="@+id/posts_list_item_image"
        android:layout_width="@dimen/posts_lists_image_size"
        android:layout_height="@dimen/posts_lists_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/posts_lists_margins"
        tools:src="@drawable/test_image"/>

    <TextView
        android:id="@+id/posts_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/posts_list_item_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/posts_list_item_image"
        android:layout_toRightOf="@+id/posts_list_item_image"
        tools:text="Test holder item"/>

    <TextView
        android:id="@+id/posts_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/posts_list_item_author"
        android:layout_alignLeft="@+id/posts_list_item_author"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/posts_list_item_author"
        tools:text="21.12.2016 12:55"/>

    <TextView
        android:id="@+id/posts_list_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/posts_list_item_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/posts_list_item_image"
        tools:text="by Post Author"/>

</RelativeLayout>